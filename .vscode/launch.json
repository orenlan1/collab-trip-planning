  "version": "0.2.0",
  "configurations": [
    {
        "name": "Debug with Nodemon",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
        "args": ["--exec", "ts-node", "src/server.ts"],
        "env": {
            "NODE_ENV": "development"
        },
        "restart": true,
        "console": "integratedTerminal"
        
    }
  ]

}