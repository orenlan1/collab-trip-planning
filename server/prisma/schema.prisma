generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String? // Needed for email/password login
  image         String?

  accounts Account[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships  TripMember[]
  createdTrips Trip[]
  messages     Message[]
  invitationsCreatedBy  Invitation[] @relation("Inviter")
  invitationsReceived  Invitation[] @relation("Invited")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Trip {
  id          String    @id @default(cuid())
  title       String
  destination String
  description String?
  startDate   DateTime?
  endDate     DateTime?
  createdBy   User      @relation(fields: [createdById], references: [id])
  createdById String
  image       String?
  latitude    Float?
  longitude   Float?

  members TripMember[]
  invitations Invitation[]
  itinerary Itinerary?
  flights   Flight[]
  lodgings  Lodging[]
  messages  Message[]
  budget    Budget?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TripMember {
  id       String   @id @default(cuid())
  trip     Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  tripId   String
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  role     String   @default("member")
  joinedAt DateTime @default(now())

  @@unique([userId, tripId])
}


model Invitation {
  id String @id @default(cuid())
  tripId String
  trip   Trip   @relation(fields: [tripId], references: [id])
  inviterUserId String
  inviterUser User @relation("Inviter",fields: [inviterUserId], references: [id])
  invitedUserId String?
  invitedUser User? @relation("Invited", fields: [invitedUserId], references: [id])
  email String?
  token String?
  type String @default("EMAIL") // EMAIL or MAGIC_LINK
  expiresAt DateTime?
  status String @default("ACTIVE") // ACTIVE, EXPIRED, REVOKED for magic links; PENDING, ACCEPTED, REJECTED for email invites
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // We'll create separate indexes for token and email since they serve different purposes
  @@index([token])
  @@index([email])
}

model Session {
  sid    String   @id
  sess   Json
  expire DateTime
}


model Itinerary {
  id        String   @id @default(cuid())
  tripId    String  @unique 
  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  days      TripDay[]
}

model TripDay {
  id          String     @id @default(cuid())
  itineraryId String 
  itinerary   Itinerary @relation(fields: [itineraryId], references: [id], onDelete: Cascade)

  date        DateTime
  activities  Activity[]
}

model Activity {
  id          String   @id @default(cuid())
  tripDayId   String
  tripDay     TripDay  @relation(fields: [tripDayId], references: [id], onDelete: Cascade)
  description String?
  startTime   DateTime? @db.Timestamp(0)
  endTime     DateTime? @db.Timestamp(0)
  name      String?
  address     String?
  image       String?
  latitude    Float?
  longitude   Float?

  expense    Expense?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Flight {
  id          String   @id @default(cuid())
  tripId     String
  trip       Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  flightNumber String
  airline     String
  departure   DateTime
  departureTimezoneId String // IANA timezone identifier for departure location
  arrival     DateTime
  arrivalTimezoneId String // IANA timezone identifier for arrival location
  from        String
  to          String


  expense    Expense?
}

model Lodging {
  id         String   @id @default(cuid())
  tripId     String
  trip       Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  name       String
  address    String
  checkIn    DateTime
  checkOut   DateTime
  latitude   Float?
  longitude  Float?

  expense    Expense?
}

model Message {
  id        String   @id @default(cuid())
  tripId    String
  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  senderId  String
  sender    User     @relation(fields: [senderId], references: [id])
  content   String
  createdAt DateTime @default(now()) @db.Timestamptz(6)
}


model Budget {
  id        String   @id @default(cuid())
  tripId    String   @unique
  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  totalPerPerson Float?
  currency  String @default("USD")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  expenses  Expense[]
}

model Expense {
  id          String   @id @default(cuid())
  budgetId    String
  budget      Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)
  description String
  cost        Float
  category    ExpenseCategory
  currency    String @default("USD")
  date        DateTime @db.Date
  activity    Activity? @relation(fields: [activityId], references: [id], onDelete: Cascade)
  activityId  String? @unique

  flightId    String? @unique
  flight      Flight? @relation(fields: [flightId], references: [id], onDelete: Cascade)
  lodgingId   String? @unique
  lodging     Lodging? @relation(fields: [lodgingId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum ExpenseCategory {
  TRANSPORTATION
  ACCOMMODATION
  ACTIVITIES
  FOOD
  MISCELLANEOUS
}


model Airport {
  id         Int   @id @default(autoincrement())
  name       String
  city       String?
  country    String?
  iata       String? @unique
  tzDatabase String?
}


model Airline {
  id         Int   @id @default(autoincrement())
  name       String
  alias      String?
  country    String?
  callsign   String?
}

model Country {
  id          Int      @id @default(autoincrement())
  name        String
  tzDatabase  String?
  latitude    Float?
  longitude   Float?

  cities      City[]
}

model City {
  id          Int      @id @default(autoincrement())
  name        String
  country     Country  @relation(fields: [countryId], references: [id])
  countryId   Int
  tzDatabase  String?
  latitude    Float?
  longitude   Float?
}
